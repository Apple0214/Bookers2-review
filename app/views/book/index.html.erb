<div class="body">
  <div class="container">
    <div class="row">
  <%= render 'book/error_messages' %>
  <%= render 'user/info', user: @user, book: @book %>

<div class="col-xs-9">
  <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <tr> 
      <th>Title</th>
      <th>Opinion</th>
    </tr>

    <%= @books.each do |book| %>
    <tr>
      <td><%= attachment_image_tag @user, :profile_image, fill:"40×40", fallback: "no-image.jpg", size:"40×40" %>
      <% end %>
      </td>
      <td><%= book.title, book_path(book) %></td>
      <td><%= book.body %></td>
    </tr>
      <% end %>
  </table>
</div>
    </div>
  </div>
</div>